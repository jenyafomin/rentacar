model Car {
  id String @id @default(cuid())
  carExcelId String?
  carExcel CarExcel? @relation(fields: [carExcelId], references: [id])

  vin String?
  plateNumber String?

  make String
  model String
  option String?
  year Int
  color String

  type String 
  categories String[] @default([])
  features String[] @default([])

	status String? @default("Active")
	isFeatured Boolean? @default(false)
	useExcelStatus Boolean? @default(false)

	availableFrom DateTime?

	amountOfDoors Int? @default(4)
	amountOfSeats Int? @default(5)
	amountOfLaguage Int? @default(2)

	priceDaily Int?
	priceMonthly Int?
	extraMiles Int?
	extraMilesPrice Int?

  transmission String? // front, rear, 4x4
	engine String?
	horsePower Int?
  fuelType String? 
	fuelConsumption Float?

  images String[] @default([])
  uploadedImages String[] @default([])
}

model CarExcel {
  id String @id
  car Car[]

  mamaCarId String? @unique
  nodeId String? @unique

  make String?
	model String?
	option String?
	year String?
	color String?

	vin String?
	plate String?
	
	status String?
	availableFrom String?
}